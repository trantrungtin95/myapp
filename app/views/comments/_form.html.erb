<% comment = @review.comments.build %>
<%= simple_form_for([@product, @review, comment],remote: true) do |f| %>
  <%= f.input :user_id, as: :hidden, :input_html => {:value => current_user.id } %>
  <%= f.input :review_id, as: :hidden, :input_html => {:value => @review.id } %>
  <%= f.input :comment_id, as: :hidden, :input_html => {:value => @parent_comment&.id } %>
  <%= f.input :content %>
  <%= f.button :submit %>
<% end %>