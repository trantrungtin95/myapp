<h1>List book visited</h1>
<table>
    <% Visited.order('created_at desc').where(user_id: current_user.id).each do |visited| %>
        <% product = visited.product %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  
            <td>
                <%= link_to image_tag(product.image_url, :class => 'list-image'), product_path(product) %>
            </td>
  
            <td class="list_description">
                <dl>
                    <strong><dt><%= link_to product.title, product_path(product) %></dt></strong>
                    <dd><%= truncate(strip_tags(product.description),
                            :length => 80) %></dd>
                </dl>
            </td>
            <td>
              <%= visited.created_at.localtime %>
            </td>
        </tr>
    <% end %>
</table>