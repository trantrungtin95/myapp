<% @bookcase.user = current_user %>
<%= form_for([current_user, @bookcase]) do |f| %>
  <% if @bookcase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookcase.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @bookcase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
   <%= f.hidden_field :user_id, :input_html => {:value => current_user.id } %>
